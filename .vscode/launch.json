{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run (Debug build)",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build"
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run (Release build)",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--release"
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}